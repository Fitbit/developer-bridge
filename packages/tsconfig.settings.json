{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "../types/*"]
    }
  }
}
